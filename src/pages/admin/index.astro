---
import Layout from "../../layouts/Layout.astro";
import { reportes } from "../../config/data.json";
---

<Layout title="Listado PTI's">
  <div class="w-full max-w-lg p-4 mt-20">
    <h2 class="text-center text-2xl">Listado de PTI's</h2>
    <div class="flex justify-between mt-4">
      <div class="flex items-center gap-2">
        <p class="font-bold">F. inicio:</p>
        <input type="date" />
      </div>
      <div class="flex items-center gap-2">
        <span class="font-bold">F. fin:</span>
        <input type="date" />
      </div>

      <button
        class="rounded-lg bg-blue-500 hover:bg-blue-600 px-4 py-2 text-white"
        >Buscar</button
      >
    </div>
    {
      reportes.map((reporte) => (
        <div class="bg-gray-100 rounded-lg mt-6 py-4 px-4">
          <div class="flex justify-between gap-2">
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Reefer:</span>
              <p class="text-gray-600">{reporte.reefer}</p>
            </div>
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Fecha:</span>
              <p class="text-gray-600">{reporte.fecha}</p>
            </div>
          </div>
          <div class="flex justify-between gap-2">
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Locación:</span>
              <p class="text-gray-600">{reporte.locacion}</p>
            </div>
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Tipo Maq:</span>
              <p class="text-gray-600">{reporte.tipomaq}</p>
            </div>
          </div>
          <div class="flex justify-between gap-2">
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Modelo:</span>
              <p class="text-gray-600">{reporte.modelo}</p>
            </div>
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Año:</span>
              <p class="text-gray-600">{reporte.ano}</p>
            </div>
          </div>
          <div class="flex justify-between gap-2">
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Serie:</span>
              <p class="text-gray-600">{reporte.serie}</p>
            </div>
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Tempera:</span>
              <p class="text-gray-600">{reporte.tempera}</p>
            </div>
          </div>

          <div class="flex justify-between gap-2">
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Estado:</span>
              <p class="text-gray-600">{reporte.estado}</p>
            </div>
            <div class="flex flex-row gap-2">
              <span class="text-gray-600 font-bold">Usuario:</span>
              <p class="text-gray-600">{reporte.tecnico}</p>
            </div>
          </div>
          <div class="flex flex-row justify-end gap-2">
            <span>Descargar excel</span>
          </div>
        </div>
      ))
    }
  </div>
</Layout>